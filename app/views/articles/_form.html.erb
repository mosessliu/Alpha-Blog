<%= render 'shared/errors', obj: @article %>
<div class = "row">
  <div class = "col-xs-12">
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class = "form-group">
      <div class = "col-sm-2 col-sm-offset-1 control-label">
        <%= f.label :title %>
      </div>
      <div class = "col-sm-6">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true%>
      </div>
    </div>        
    <div class = "form-group">
      <div class = "col-sm-2 col-sm-offset-1 control-label">
        <%= f.label :description %>
      </div>
      <div class = "col-sm-6">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article"%>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
            <div class="checkbox-inline input_checkbox">
              <%= cb.check_box(class: "checkbox") + cb.text%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-6">
        <%= f.submit class: "btn btn-primary btn-large" %>
      </div>
    </div>
  <% end %>
  </div>
</div>  


<div class = "col-sm-offset-3 col-sm-6">
  [ <%= link_to  "Cancel request and return to articles listing", articles_path%> ]
</div>