<% for article in articles %>
  <div class = "row">
    <div class = "col-xs-8 col-xs-offset-2">
      <div class = "well well-lg">
        <%=link_to "#{article.title}", article_path(article), class: "article-title" %>
        <div class = "article-description" style= "margin-top:5px">
          <%=simple_format(article.description)%>
          <div class = "article-meta" style = "margin-top:20px">
            <small>
              Created by <strong><%=article.user.username if article.user%></strong>
              <%= time_ago_in_words(article.created_at) %> ago.<br/>
              Last updated <%= time_ago_in_words(article.updated_at) %> ago.
            </small>
          </div>
        </div>
        <div class = "article-actions" style="margin-top:5px">
          <%=link_to "Show", article_path(article), class:'btn btn-sm btn-success'%>
          <% if current_user && current_user == article.user %>
            <%=link_to "Edit", edit_article_path(article), class:'btn btn-sm btn-warning'%>
            <%=link_to "Delete", article_path(article), 
              method: :delete, 
              data: {confirm: "Are you sure?"}, 
              class: 'btn btn-sm btn-danger'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>