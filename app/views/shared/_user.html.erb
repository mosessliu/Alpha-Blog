<div class="col-xs-4 col-md-4">
  <%= link_to user_path(user) do %>
    <div class="thumbnail">
      <div class="user-username" style="padding-bottom:10px">
        <%= user.username %>
      </div>
      <%=gravatar_for(user)%>
      <div class='user-contributions'>
        Contributed <%= pluralize(user.articles.size, "Article")%>
      </div>
      <% if logged_in? && current_user.admin%>
        <div>
          <%= link_to "Delete User", 
            user_path(user), 
            method: :delete,  
            data: {confirm: "Are you sure you want to delete this user and all his/her articles?"},
            class: "btn btn-danger btn-sm"
          %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>