<h3 align='center' style='margin-bottom:30px'> Log In</h3>

<div class = "row">
  <div class = "col-xs-12">
    <%= form_for(:sessions, :html => {class: 'form-horizontal', role: 'form'}, url: login_path) do |f| %>
      <div class="form-group">
        <label class="col-sm-2 col-sm-offset-1 control-label">Email</label>
        <div class="col-sm-6">
          <%= f.email_field :email, class: 'form-control', placeholder: "Email", autofocus: true%>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 col-sm-offset-1 control-label">Password</label>
        <div class="col-sm-6">
          <%= f.password_field :password, class: 'form-control', placeholder: "Password"%>
        </div>
      </div>
      <div class="form-group">
        <dig class="col-sm-6 col-sm-offset-3">
          <%= f.submit "Log In", class: "btn btn-large btn-primary" %>
          <%= link_to "Sign Up", signup_path, class: "btn btn-large btn-default" %>
        </div>
      </div>
    <% end %>  
  </div>
</div>