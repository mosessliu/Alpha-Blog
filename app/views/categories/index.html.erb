<h3 align = "center" style="margin-bottom:20px">All Categories</h3>

<div class = "col-xs-8 col-xs-offset-2" align = "right" style = "margin-bottom:20px">
  <%=link_to "New Category", new_category_path, class:'btn btn-md btn-success'%>
</div>

<div class = "col-xs-4 col-xs-offset-4">
  <% for category in @categories %>
    <div class = "row">
      <div class = "well col-xs-8 col-xs-offset-2">
        <div align = "center">
          <%= category.name %>
        </div>
      </div>
    </div>
  <% end %>
</div>